{
  "name": "backend",
  "version": "0.1.0",
  "description": "",
  "main": "src",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "tsc -w -p tsconfig.build.json",
    "build:ci": "npm run build",
    "start": "node dist",
    "start:dev": "nodemon dist",
    "start:prod": "NODE_ENV=production node dist",
    "dev": "concurrently -k \"npm run build:watch\" \"npm run start:dev\"",
    "test": "jest --runInBand",
    "test:watch": "jest --runInBand --watch",
    "test:ci": "jest --passWithNoTests --collectCoverage --coverageReporters json --coverageDirectory ./coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/escaletech/health-gql-mongo-api-template.git"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "apollo-datasource-mongo": "0.0.7",
    "apollo-server-express": "^2.8.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-pino-logger": "^4.0.0",
    "graphql": "^14.4.2",
    "mongoose": "^5.7.3",
    "pino": "^5.13.1",
    "pino-pretty": "^3.2.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.5",
    "@types/express": "^4.17.0",
    "@types/graphql": "^14.2.3",
    "@types/jest": "^24.0.16",
    "@types/pino": "^5.8.8",
    "@types/pino-http": "^4.0.2",
    "apollo-server-testing": "^2.8.1",
    "concurrently": "^4.1.1",
    "husky": "^3.0.2",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.1",
    "nodemon": "^1.19.1",
    "prettier-standard": "^9.1.1",
    "tagged-template-noop": "^2.1.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.4.1",
    "tsc": "^1.20150623.0",
    "typescript": "^3.5.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/*": "prettier-standard"
  }
}
